{
	"private": true,
	"name": "woovi-playground",
	"scripts": {
		"build": "turbo run build",
		"config:local": "turbo run config:local",
		"dev": "turbo run dev",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"lint": "turbo run lint",
		"relay": "turbo run relay",
		"schema": "turbo run schema",
		"compose:up": "docker-compose -f docker-compose.yml up -d",
		"compose:down": "docker-compose -f docker-compose.yml down",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.27.2",
		"@babel/preset-typescript": "^7.27.1",
		"@types/jest": "^29.5.14",
		"@woovi-playground/eslint-config-custom": "^0.0.0",
		"autoprefixer": "^10.4.21",
		"babel-plugin-transform-barrels": "^1.0.23",
		"eslint": "^8.57.1",
		"jest": "^29.7.0",
		"jest-junit": "^16.0.0",
		"prettier": "^3.5.3",
		"turbo": "latest"
	},
	"packageManager": "pnpm@10.0.0"
}